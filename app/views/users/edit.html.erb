<div class="m-5">
  <h2 class="text-center">Edit Profile</h2>
  <div class ="card mx-auto" style="width: 25vw">
    <div class="card-body">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control", placeholder: "New Username" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "New email" %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", placeholder: "New Password" %>
        </div>
        <%= link_to 'Cancel', profile_path, class: "btn btn-outline-light" %>
        <%= f.submit 'Confirm', class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>
