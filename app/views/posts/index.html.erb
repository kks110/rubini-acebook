<h1>News Feed</h1>

<table>
  <tr>
    <th>Posts</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.body %></td>
      <td><%= User.find(post.user_id).username %></td>
      <td><%= time_calculation(post.created_at) %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Update', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>
